{
  "name": "auto-dragalia",
  "version": "0.10.0",
  "private": true,
  "main": "src/main.ts",
  "repository": "https://github.com/NateScarlet/auto-dragalia.git",
  "author": "NateScarlet <NateScarlet@Gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack -p",
    "watch": "webpack --watch",
    "capture": "autojs cap",
    "code-generate:images": "node ./scripts/generate-images-code.js",
    "adb:push": "node ./scripts/push.js",
    "release": "standard-version"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "autojs-dev": "^0.6.0-beta.3",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^5.2.0",
    "prettier": "^1.16.4",
    "raw-loader": "^1.0.0",
    "standard-version": "^5.0.2",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.3.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{md,ts,js,yml,xml,json}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "node ./scripts/postchangelog.js"
    }
  }
}
